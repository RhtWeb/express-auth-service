{
    "name": "express-init-setup",
    "version": "1.0.0",
    "description": "Professional express app setUp",
    "main": "dist/server.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon -L src/server.ts",
        "dev:tsc": "tsc && node dist/server.js",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint:fix": "eslint . --fix",
        "lint": "eslint .",
        "prepare": "husky",
        "test": "jest --watch --runInBand",
        "start": "ts-node src/index.ts",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "keywords": [
        "Express",
        "App",
        "SetUp"
    ],
    "author": "Rohit Singh",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/eslint__js": "^8.42.3",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.0",
        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.9",
        "nodemon": "^3.1.4",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.1",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.3.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ],
        "*.md": "npm run format:fix"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http-errors": "^2.0.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.3.20",
        "winston": "^3.14.2"
    }
}
